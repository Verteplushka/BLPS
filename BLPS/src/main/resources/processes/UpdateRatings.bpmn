<?xml version="1.0" encoding="UTF-8"?>
<bpmn:definitions xmlns:bpmn="http://www.omg.org/spec/BPMN/20100524/MODEL"
                  xmlns:bpmndi="http://www.omg.org/spec/BPMN/20100524/DI"
                  xmlns:dc="http://www.omg.org/spec/DD/20100524/DC"
                  xmlns:di="http://www.omg.org/spec/DD/20100524/DI"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns:zeebe="http://camunda.org/schema/zeebe/1.0"
                  xmlns:camunda="http://camunda.org/schema/1.0/bpmn"
                  id="Definitions_0ki69jh"
                  targetNamespace="http://bpmn.io/schema/bpmn"
                  exporter="Camunda Modeler"
                  exporterVersion="5.35.0">

  <bpmn:process id="rating_update_process" isExecutable="true"
  camunda:historyTimeToLive="P30D">
    <!-- Timer Start Event для запуска процесса каждые 5 минут -->
   <bpmn:startEvent id="TimerStartEvent_1">
   <bpmn:outgoing>Flow_StartToUpdate</bpmn:outgoing>
     <bpmn:timerEventDefinition>
       <bpmn:timeCycle xsi:type="bpmn:tFormalExpression">R/PT5M</bpmn:timeCycle>
     </bpmn:timerEventDefinition>
   </bpmn:startEvent>

    <!-- Service Task для обновления рейтингов -->
    <bpmn:serviceTask id="UpdateRatingsTask" name="Update Ratings"
                     camunda:type="external"
                     camunda:topic="updateRatings">
      <bpmn:incoming>Flow_StartToUpdate</bpmn:incoming>
      <bpmn:outgoing>Flow_UpdateToEnd</bpmn:outgoing>
    </bpmn:serviceTask>

    <!-- Конечное событие -->
    <bpmn:endEvent id="EndEvent_1">
      <bpmn:incoming>Flow_UpdateToEnd</bpmn:incoming>
    </bpmn:endEvent>

    <!-- Потоки выполнения -->
    <bpmn:sequenceFlow id="Flow_StartToUpdate" sourceRef="TimerStartEvent_1" targetRef="UpdateRatingsTask" />
    <bpmn:sequenceFlow id="Flow_UpdateToEnd" sourceRef="UpdateRatingsTask" targetRef="EndEvent_1" />
  </bpmn:process>

  <bpmndi:BPMNDiagram id="BPMNDiagram_1">
    <bpmndi:BPMNPlane id="BPMNPlane_1" bpmnElement="rating_update_process">
      <!-- Элементы диаграммы -->
      <bpmndi:BPMNShape id="TimerStartEvent_1_di" bpmnElement="TimerStartEvent_1">
        <dc:Bounds x="182" y="102" width="36" height="36" />
        <bpmndi:BPMNLabel>
          <dc:Bounds x="170" y="145" width="60" height="20" />
        </bpmndi:BPMNLabel>
      </bpmndi:BPMNShape>

      <bpmndi:BPMNShape id="UpdateRatingsTask_di" bpmnElement="UpdateRatingsTask">
        <dc:Bounds x="280" y="80" width="100" height="80" />
      </bpmndi:BPMNShape>

      <bpmndi:BPMNShape id="EndEvent_1_di" bpmnElement="EndEvent_1">
        <dc:Bounds x="432" y="102" width="36" height="36" />
      </bpmndi:BPMNShape>

      <!-- Соединения -->
      <bpmndi:BPMNEdge id="Flow_StartToUpdate_di" bpmnElement="Flow_StartToUpdate">
        <di:waypoint x="218" y="120" />
        <di:waypoint x="280" y="120" />
      </bpmndi:BPMNEdge>

      <bpmndi:BPMNEdge id="Flow_UpdateToEnd_di" bpmnElement="Flow_UpdateToEnd">
        <di:waypoint x="380" y="120" />
        <di:waypoint x="432" y="120" />
      </bpmndi:BPMNEdge>
    </bpmndi:BPMNPlane>
  </bpmndi:BPMNDiagram>
</bpmn:definitions>